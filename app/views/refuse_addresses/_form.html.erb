<%= simple_form_for @refuse_address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :house_no %>
  <%= f.input :postcode %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                refuse_addresses_path, :class => 'btn' %>
  </div>
<% end %>
