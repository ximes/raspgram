<%= simple_form_for @trick, :html => { :class => 'form-horizontal' } do |f| %>
  <%= @trick.name %>
  <%= f.input :core %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tricks_path, :class => 'btn' %>
  </div>
<% end %>
