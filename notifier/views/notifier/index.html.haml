          %ul.todo
            - t[:calls].first(3).each do |t|
              %li #{t[:line_no]}: #{t[:next_time]}
      .four.columns.refuse-container
        <h1>Collection <a href="./notifier/internal.html" class="pull-right"><img class="icon icon-forward" src="images/icon_forward.png" /></a></h1>
        %ul.todo
          - @refuse.each do |r|
            - if r[:dates].any?
              %li 
                #{r[:type].capitalize}: 
                #{r[:dates].select{|d| d if d>Date.today}.map{|d| d.strftime("%d/%m/%Y")}.first}
